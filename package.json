{
  "name": "@maronn/rich-editor-library",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "maronn",
  "license": "MIT",
  "files": [
    "dist",
    "*.css"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.umd.cjs",
      "import": "./dist/index.js"
    },
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"npm run docs:dev\"",
    "watch": "npm-watch",
    "tailwind:watch": "tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "dev:gen": " vite & npm run gen:css & npm run tailwind:watch ",
    "build": "vite build",
    "build:lib": "vite build --mode library",
    "lint": "eslint . --fix",
    "gen:css": "tsx generate-css.ts",
    "preview": "vite preview",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "watch": {
    "dev:gen": {
      "patterns": [
        "lib/**/style-for-gen.css"
      ],
      "extensions": "css"
    }
  },
  "dependencies": {
    "@emotion/css": "^11.13.4",
    "@lexical/react": "^0.18.0",
    "lexical": "^0.18.0",
    "open-graph-scraper-lite": "^2.1.0",
    "react": "^18.0.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "@wyw-in-js/vite": "^0.5.4",
    "concurrently": "^9.1.0",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "eslint-plugin-unused-imports": "^4.1.4",
    "glob": "^11.0.0",
    "globals": "^15.9.0",
    "npm-watch": "^0.13.0",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.1",
    "typed-css-modules": "^0.9.1",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.3.0",
    "vitepress": "^1.5.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
